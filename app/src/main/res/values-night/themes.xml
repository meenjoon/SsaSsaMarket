<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SsaSsaMarket" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppBackgroundStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="AppBarLayout">
        <item name="android:background">@color/black</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="background">@color/black</item>
        <item name="itemIconTint">@color/navigation_unselected_color</item>
        <item name="itemTextColor">@color/navigation_unselected_color</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:backgroundTint">@color/white_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardViewButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/white_grey</item>
    </style>

    <style name="CardViewButtonTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OtherMessageTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChatTimeTextStyle">
        <item name="android:textColor">@color/grey_300</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="buttonTint">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:textStyle">bold</item>
        <item name="colorPrimary">@color/grey_300</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSurface">@color/white_grey</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>
</resources>
